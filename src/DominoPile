import java.util.ArrayList;
import java.util.Collections;


public class DominoPile {
    private ArrayList<Domino> pile;

    public DominoPile(){
        this.pile = new ArrayList<>();
    }

    public void newStack6(){
        pile.clear();
        for(int i = 0; i<= 6; i++){
            for(int j = 0; j <= 6; j++){
                pile.add(new Domino(i,j));
            }
        }


    }

    public void shuffle(){
        Collections.shuffle(pile);



    }




}

